{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2019",
      "sourceMap": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": [
      "./src"
    ],
    "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
  